
<div class="row">
  <div class="col s12">
   <h2><%=@user.name%></h2>
  </div>

  <div class="col s6">
    <h3><%=@user.name%>'s Favorite Movies:</h3>
    <% if !@favorited_movies.empty? %>
    <ul class="collection">
       <% @favorited_movies.each do |movie| %>
       <li class="collection-item avatar">
       <img src="<%=movie.Poster %>" alt="" class="circle">
       <span class="title"> <%= link_to movie.Title, movie %> </span><a href=" /movies/<%=movie.id%>/like " class="secondary-content" ><i class="material-icons">grade</i></a>
       </li>
      <% end %>

    <% else %>
      <p>You have no Favorite movies yet :-{ </p>
    <% end %>
    </ul>
  </div>

  <div class="col s6">
  <h3>Watch list</h3>
  <%if @watchlist_movies%>
  <ul class="collection">
    <% @watchlist_movies.each do |movie|%>
      <li class="collection-item avatar">
       <img src="<%=movie.Poster %>" alt="" class="circle">
       <span class="title"> <%= link_to movie.Title, movie %> </span><a href="#delete_from_watch_list" class="secondary-content"><i class="material-icons">grade</i></a>
      </li>
    <% end %>
  <% else %>
      <p>You have no Movies in Favorite List yet </p>
  <%end%>

  </div>

</div>

<div class="">
  <h3>Activity List</h3>
  <% if session[:history] %>
  <ul>
    <% session[:history][0..10].each do |activity| %>
    <p><strong><%= activity[0] %></strong> <em><%= activity[1] %></em></p>
    <% end %>
  </ul>
  <% else %>
    <p>You haven't done anything yet!</p>
  <% end %>
</div>
