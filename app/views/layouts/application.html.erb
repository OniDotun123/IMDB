<!DOCTYPE html>
<html>
  <head>
    <title>IMDB</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <%= link_to 'Profile page', user_path(current_user) %> | <%= link_to "Log out", sessions_logout_path %>
    <%else%>
      <%= link_to 'Register', new_user_path %> | <%= link_to "Log In" %>
    <%end%>

    <%= yield %>
  </body>
</html>
